<div class=CenterDiv>
    <h3>ルーム情報登録</h3>
    <%= form_for(@hotel)do |new|%>
        <table>
            <tr>
                <th><%=new.label :roomname ,"ルーム名"%></th>
                <td><%=new.text_field :roomname %></td>
            </tr>
            <tr>
                <th><%=new.label :introduction ,"ルーム紹介"%></th>
                <td><%=new.text_area :introduction %></td>
            </tr>
            <tr>
                <th><%=new.label :price ,"料金  ￥"%></th>
                <td><%=new.text_field :price ,data: { autonumeric:true } %></td>
    
            </tr>
            <tr>
                <th><%=new.label :place ,"住所"%></th>
                <td><%=new.text_field :place %></td>
            </tr>
            <tr>
                <th><%=new.label :picture ,"写真"%></th>
                <td><%=new.text_field :picture %></td>
            </tr>
        </table>
        <div>
            <ul>
                <li><%= new.submit "登録"%></li>
                <li><%= link_to "スケジュール一覧に戻る" , :hotels %></li>
            </ul>
        </div>
    <% end %>
</div>